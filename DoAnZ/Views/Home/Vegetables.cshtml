        <script>
            $(document).ready(function () {
                const products = $(".product-card");
                const itemsPerPage = 6; // Number of products per page
                const totalPages = Math.ceil(products.length / itemsPerPage);

                // Function to generate pagination links
                function generatePaginationLinks() {
                    const pagination = $("#pagination");
                    pagination.empty(); // Clear existing pagination links
                    for (let i = 1; i <= totalPages; i++) {
                        const link = $("<a>", {
                            href: "#",
                            class: i === 1 ? "active rounded" : "rounded",
                            text: i
                        });
                        pagination.append(link);
                    }
                }

                // Initial pagination generation
                generatePaginationLinks();

                // Function to toggle visibility of products based on current page
                function toggleProducts(page) {
                    const startIndex = (page - 1) * itemsPerPage;
                    const endIndex = startIndex + itemsPerPage;
                    products.each(function (index, product) {
                        if (index >= startIndex && index < endIndex) {
                            $(product).removeClass("hidden");
                        } else {
                            $(product).addClass("hidden");
                        }
                    });
                }

                // Initial toggle to show products on first page
                toggleProducts(1);

                // Event listener for pagination links
                $("#pagination").on("click", "a", function (e) {
                    e.preventDefault();
                    const page = parseInt($(this).text());
                    $("#pagination a").removeClass("active");
                    $(this).addClass("active");
                    toggleProducts(page);
                });
            });
        </script>
